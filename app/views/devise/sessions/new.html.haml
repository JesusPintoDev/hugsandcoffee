
%div.container 
  %div.content.col-s-12
    %div.footer
      %h3 Inicio de sesión
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %hr.padding/
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      %hr.padding/
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      -#- if devise_mapping.rememberable?
      -#  .field
      -#    = f.check_box :remember_me
      -#    = f.label :remember_me
      - if flash.alert
        %div.alert-error
          %ul
            %li #{flash.alert}
      %hr.padding/  
      .actions
        = f.submit 'Log in', :class => "button"
      %hr.padding/  

    %p.desc.black ¿No tienes una cuenta?
    .desc.black= link_to "¡Registrate aquí!", new_registration_path(resource_name)
